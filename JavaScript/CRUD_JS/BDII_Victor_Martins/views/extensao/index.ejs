<!doctype html>
<html lang="pt-br">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Gestão Contratos</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">
<h2>Credito I Banco de Dados II</h2>
<% if (messages.success) { %>
<div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %>
<% if (messages.error) { %>
<div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>
<div class="card">
<div class="card-header">
<ul class="nav nav-pills w-100">
<li class="nav-pill active">
<a class="nav-link">Cadastrar contratos</a>
</li>
<li class="nav-pill ml-auto">
<a class="nav-link active" href="/extensao/adicionar">Inserir Contrato</a>
</li>
</ul>
</div>
<div class="card-body">
  <% if(dataExtensao.length) { %>
  <table class="table">
  <thead>
  <tr>
  <th scope="col">#</th>
  <th scope="col">id</th>
  <th scope="col">FK_Pessoa</th>
  <th scope="col">FK_Cadastra</th>
  <th scope="col">nota_avaliacao</th>
  <th scope="col">discricao_avaliacao</th>
  <th scope="col">data_avaliacao</th>
  <th scope="col">data_contrato</th>
  <th scope="col">valor_mensal</th>
  <th scope="col">status</th>
  <th scope="col">validade</th>
  <th width="200px">Ação</th>
  </tr>
  </thead>
  <tbody> <!-- para todos os registros do query data, incrementar um contador -->
  <% for(var i = 0; i< dataExtensao.length; i++) { %>
  <tr>
  <th scope="row"><%= (i+1) %></th>
  <td><%= dataExtensao[i].id %></td>
  <td><%= dataExtensao[i].FK_Pessoa %></td>
  <td><%= dataExtensao[i].FK_Cadastra %></td>
  <td><%= dataExtensao[i].nota_avaliacao %></td>
  <td><%= dataExtensao[i].discricao_avaliacao %></td>
  <td><%= dataExtensao[i].data_avaliacao %></td>
  <td><%= dataExtensao[i].data_contrato %></td>
  <td><%= dataExtensao[i].valor_mensal %></td>
  <td><%= dataExtensao[i].status %></td>
  <td><%= dataExtensao[i].validade %></td>
  <td>

  <a class="btn btn-success edit" href="../extensao/atualizar/<%=dataExtensao[i].id%>">Editar</a>
 
 
  <a class="btn btn-danger delete" onclick="return alert('Tem certeza da remoção?')"
  href="../extensao/delete/<%=dataExtensao[i].id%>">Deletar</a>
  </td> </tr> <% } %> </tbody>
  </table>
  <% } %> <!-- se resultado vazio da query data -->
  <% if(!dataExtensao.length) { %>
  <p class="text-center">contrato não encontrado!</p>
  <% } %>
  </div>
  </div>
</body>
</html>